{
  "project": {
    "name": "Vercel Telegram Finance Bot",
    "type": "telegram-bot",
    "platform": "vercel-hobby"
  },
  "development": {
    "reuseFirst": true,
    "minimizeComplexity": true,
    "consistencyCheck": true,
    "autoValidate": true
  },
  "constraints": {
    "maxApiFunctions": 12,
    "maxCronJobs": 2,
    "currentApiFunctions": 9,
    "currentCronJobs": 2
  },
  "codeReview": {
    "validateSyntax": true,
    "checkDependencies": true,
    "verifyLogic": true,
    "formatConsistency": true,
    "errorHandling": true
  },
  "workflow": {
    "preEditChecks": [
      "查找现有相似功能",
      "确认平台限制",
      "检查代码风格"
    ],
    "postEditChecks": [
      "语法验证",
      "依赖检查", 
      "逻辑验证",
      "格式统一",
      "错误处理"
    ]
  },
  "patterns": {
    "apiReuse": true,
    "messageTemplateReuse": true,
    "errorHandlingConsistency": true,
    "chineseLabelsOnly": true
  },
  "reminders": {
    "checkExistingFirst": true,
    "validateAfterEdit": true,
    "maintainConsistency": true,
    "respectLimits": true
  }
}